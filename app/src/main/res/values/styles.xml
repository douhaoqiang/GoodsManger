<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:includeFontPadding">false</item>
    </style>


    <style name="title_text_style_black">
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:textSize">@dimen/dp720_36</item>
    </style>

    <style name="title_text_style">
        <item name="android:textColor">@color/color_FFFFFF</item>
        <item name="android:textSize">@dimen/dp720_36</item>
    </style>

    <style name="title_text_style_gray">
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:textSize">@dimen/dp720_36</item>
    </style>


    <style name="page_text_style">
        <item name="android:textColor">@color/color_999999</item>
        <item name="android:textSize">@dimen/dp720_24</item>
        <item name="android:textColorHint">@color/color_B7B7B7</item>
    </style>

    <style name="page_text_style_white">
        <item name="android:textColor">@color/color_FFFFFF</item>
        <item name="android:textSize">@dimen/dp720_24</item>
    </style>

    <style name="page_text_style_blank">
        <item name="android:textColor">@color/color_000000</item>
        <item name="android:textSize">@dimen/dp720_24</item>
        <item name="android:textColorHint">@color/color_B7B7B7</item>
    </style>


    <style name="MyDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

</resources>
